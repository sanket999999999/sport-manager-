<html>
  <head>
    <title>TO-DO Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gradient-to-r from-purple-500 to-blue-500 flex justify-center items-center min-h-screen">
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2 py-10 rounded-lg">
        <h1 class="text-3xl text-gray-700 font-semibold mb-4">Sport Manager</h1>
        <h6 class="py-4 text-gray-600">Signup as a new user</h6>
        <form action="/users" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="py-3">
            <label for="firstName" class="text-gray-700">First name:</label>
            <input name="firstName" type="text" class="border border-gray-300 text-gray-900 text-sm rounded w-full p-2" autofocus required>
          </div>
          <div class="py-3">
            <label for="lastName" class="text-gray-700">Last name:</label>
            <input name="lastName" type="text" class="border border-gray-300 text-gray-900 text-sm rounded w-full p-2">
          </div>
          <div class="py-3">
            <label for="email" class="text-gray-700">Email:</label>
            <input name="email" type="email" class="border border-gray-300 text-gray-900 text-sm rounded w-full p-2" required>
          </div>
          <div class="py-3">
            <label for="password" class="text-gray-700">Password:</label>
            <input name="password" type="password" class="border border-gray-300 text-gray-900 text-sm rounded w-full p-2" required>
          </div>
          <div class="py-3">
            <button type="submit" name="submit" value="admin" class="px-4 text-white bg-indigo-600 hover:bg-indigo-800 font-medium rounded py-2 px-4 mr-2">Admin</button>
            <button type="submit" name="submit" value="player" class="px-4 text-white bg-green-600 hover:bg-green-800 font-medium rounded py-2 px-4">Player</button>
          </div>
        </form>
        <div class="py-2">
    <% if(messages && messages.error && messages.error.length>0){ %>
        <% for(var i=0; i<messages.error.length; i++) { %>
            <li class=" py-2 px-2 border bg-red-200 rounded"> 
                <%= messages.error[i] %>
            </li>
        <%} %>
    <%}%>
</div>
      </div>
    </div>
  </body>
</html>
